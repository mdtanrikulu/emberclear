<table data-test-contacts>
  <thead>
    <tr>
      <th></th>
      <th>{{t 'models.identity.name'}}</th>
      <th>{{t 'models.identity.publicKey'}}</th>
    </tr>
  </thead>
  <tbody>

    {{#each this.contacts as |identity|}}
      <tr data-test-contact-row>
        <td>
          <a {{action this.remove identity}}>
            {{t 'buttons.remove'}}
          </a>
        </td>
        <td>
          {{identity.name}}
        </td>
        <td>
          {{identity.publicKeyAsHex}}
        </td>
      </tr>
    {{/each}}

    {{#if (eq this.contacts.length 0)}}
      <tr>
        <td colspan='3'>
          {{t 'ui.contacts.noContacts'}}
        </td>
      </tr>
    {{/if}}

  </tbody>
</table>
